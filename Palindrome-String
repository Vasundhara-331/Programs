#include <stdio.h>
int main()
{
    char s[100];
    int i,l=0,k=1;
    printf("Enter the string: ");
    scanf("%[^\n]s",s);
    for(i=0;s[i]!='\0';i++)
    {
        l++;
        if(s[i]>='A'&&s[i]<='Z')
        {
            s[i]=s[i]+32;
        }
    }
    for(i=0;i<=l/2;i++)
    {
        if(s[i]!=s[l-i-1])
        {
            k=0;
            break;
        }
    }
    if(k==1)
    {
        printf("\nString is a palindrome ");
    }
    else if(k==0)
    {
        printf("\nString is not a palindrome");
    }
 return 0;
}
