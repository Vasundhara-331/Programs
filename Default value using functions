# include <stdio.h>
void sum(int, int, char base='D');
void main()
{
    printf("Normal conditions:");
    sum(5,6);
    printf("\nRare conditions: ");
    sum(6,9,'H');
    sum(6,9,'O');
}
void sum(int x, int y, char base)
{
    if (base == 'D' || base == 'd')
        printf("\nSum of %d and %d in decimal is %d", x, y, x + y);
    else if (base == 'H' || base == 'h')
        printf("\nSum of %d and %d in hexadecimal is %x", x, y, x + y);
    else if (base == 'O' || base == 'o')
        printf("\nSum of %d and %d in octal is %o", x, y, x + y);
    else
        printf("\nInvalid base specified");
}
