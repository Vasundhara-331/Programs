# include <stdio.h>
int sum(int n);
int main()
{
    int n;
    printf("Enter the number: ");
    scanf("%d",&n);
    if(n>=0 && n<=9)
    printf("\nSum is %d",n);
    else
    printf("\nSum is %d",sum(n));
    return 0;
}
int sum (int n)
{
    if (n==0)
    return 0;
    else
    return (n%10+sum(n/10));
}
