# include <stdio.h>
int power(int b, int e);
int main()
{
    int base,n,result;
    printf("Enter the base: ");
    scanf("%d",&base);
    printf("\nEnter the exponent: ");
    scanf("%d",&n);
    if(n<0 || base<0)
    printf("\nInvalid inputs!");
    else
    {
        printf("\nPower of the number is %d",power(base,n));
    }
    return 0;
}
int power(int b, int e)
{
    if(e!=0)
    return (b*power(b,e-1));
    else
    return 1;
}
