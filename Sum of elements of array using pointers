# include <stdio.h>
int main()
{
    int a[10],i,n,*p,sum=0;
    p=a;
    printf("Enter the limit of the array: ");
    scanf("%d",&n);
    printf("\nEnter the elements of the array:\n");
    for(i=0;i<n;i++)
    {
        printf("a[%d]",i);
        scanf("%d",(p+i));
    }
    for(i=0;i<n;i++)
    {
        sum=sum+*(p+i);
        
    }
    printf("\nSum is:%d",sum);
    return 0;
}
