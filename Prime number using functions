# include <stdio.h>
int prime(int n);
int main()
{
    int n;
    printf("Enter a number: ");
    scanf("%d",&n);
    prime(n);
return 0;
}
int prime(int n)
{
    int i,flag=0;
     if(n<=0)
        printf("\nPlease enter a positive number!");
     else if(n==1)
        printf("\nIt is neither prime nor composite");
    else
    {
        for(i=2;i<n;i++)
       {
             if(n%i==0)
            {
              flag=1;
              break;
            }
        }
        if(flag==1)
        {
          printf("\nNot a prime number");
        }
        else
        {
        printf("\nPrime number");
        }
    }
}
