# include <stdio.h>
struct student 
{
    int id;
    char name[20];
    int mark1;
    int mark2;
    int mark3;
    int total;
}s[20];
int main()
{
    int n,i,j;
    printf("Enter the number of students:");
    scanf("%d",&n);
    printf("\nEnter student details:\n");
    for(i=0;i<n;i++)
    {
    printf("\nEnter student id: ");
    scanf("%d",&s[i].id);
    printf("\nEnter name of student %d :",i+1);
    getchar();
    scanf("%[^\n]s",s[i].name);
    printf("\nEnter mark 1: ");
    scanf("%d",&s[i].mark1);
    printf("\nEnter mark 2: ");
    scanf("%d",&s[i].mark2);
    printf("\nEnter mark 3: ");
    scanf("%d",&s[i].mark3);
    s[i].total=s[i].mark1+s[i].mark2+s[i].mark3;
}
printf("\nPrinting details of %d students:\n",n);
printf("ID\t\tName\t\tMark 1\t\tMark 2\t\tMark 3\t\tTotal\n");
for(i=0;i<n;i++)
{
    printf("%d\t\t%s\t\t%d\t\t%d\t\t%d\t\t%d\n",s[i].id,s[i].name,s[i].mark1,s[i].mark2,s[i].mark3,s[i].total);
}
for(i=0;i<n;i++)
{
    for(j=0;j<n-i-1;j++)
    {
        if(s[j].total<s[j+1].total)
        {
            struct student temp;
            temp=s[j];
            s[j]=s[j+1];
            s[j+1]=temp;
        }
    }
}
printf("\nStudent order in the order of rank is:\n");
printf("ID\t\tName\t\tTotal\t\tRank\n");
for(i=0;i<n;i++)
{

    printf("%d\t\t%s\t\t%d\t\t%d\n",s[i].id,s[i].name,s[i].total,i+1);
}
return 0;
}
