# include <stdio.h>
int main()
{
    int a,b,*p,*q;
    printf("Enter two numbers: ");
    printf("\na: ");
    scanf("%d",&a);
    printf("\nb: ");
    scanf("%d",&b);
    p=&a;
    q=&b;
    printf("\nNumbers before swapping are %d and %d",*p,*q);
    *q=*p+*q;
    *p=*q-*p;
    *q=*q-*p;
    printf("\nNumbers after swapping are %d and %d",*p,*q);
return 0;
}
