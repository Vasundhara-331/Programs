#include <stdio.h>

int main()
{
    long b;

    // Input the binary number
    printf("Enter a binary number: ");
    scanf("%ld", &b);

    // Initialize variables for decimal conversion
    int dec = 0, base = 1, remainder;

    // Convert binary to decimal
    while (b > 0) 
    {
        remainder = b % 10;
        dec += remainder * base;
        b /= 10;
        base *= 2;
    }

    // Print the decimal representation
    printf("Decimal: %d\n", dec);

    return 0;
}
