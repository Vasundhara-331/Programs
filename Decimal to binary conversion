#include <stdio.h>
int main() 
{
    int dec;

    // Input the decimal number
    printf("Enter a decimal number: ");
    scanf("%d", &dec);

    // Handle the case when the input number is 0
    if (dec == 0)
    {
        printf("Binary: 0\n");
        return 0;
    }

    // Array to store the binary representation
    int b[32];

    // Initialize index for binary array
    int index = 0;

    // Convert decimal to binary
    while (dec > 0)
    {
        b[index] = dec % 2;
        dec = dec / 2;
        index++;
    }

    // Print the binary representation in reverse order
    printf("Binary: ");
    for (int i = index - 1; i >= 0; i--) 
    {
        printf("%d", b[i]);
    }

    printf("\n");

    return 0;
}
