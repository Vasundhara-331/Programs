# include <stdio.h>
int print(int a[], int n);
int swap(int *a, int *b);
int sort(int a[], int n, int i, int j);
int main()
{
    int n, a[7]={3,6,1,2,7,10,65};
    n=sizeof(a)/sizeof(a[0]);
    printf("\nUnsorted array is:\t");
    print(a,n);
    sort(a,n,0,0);
    printf("\nSorted array is:\t");
    print(a,n);
    return 0;
}
int print(int a[], int n)
{
    int i;
    for(i=0;i<n;i++)
    {
        printf("%d\t",a[i]);
    }
}
int sort(int a[], int n, int i, int j)
{
    if(i<n-1)
    {
        if(j<n-i-1)
        {
            if(a[j]>a[j+1])
            {
                swap(&a[j],&a[j+1]);
            }
            sort(a,n,i,j+1);
        }
        else
        {
            sort(a,n,i+1,0);
        }
    }
}
int swap(int *a, int *b)
{
    int temp;
    temp = *a;
    *a = *b;
    *b = temp;
}
